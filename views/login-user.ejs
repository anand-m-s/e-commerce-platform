                            </div>
                            <!-- Password input -->
                            <div class="form-floating mb-3">
                              <input type="password" id="form3Example4" name="password" class="form-control form-control-lg" placeholder=" " required>
                              <label for="form3Example4">Password</label>
                            </div>
                          
                            <div class="d-flex justify-content-between align-items-center">
                              <a href="/forgotpassword" class="text-body" style="text-decoration: none;">Forgot password?</a>
                            </div>
                          
                            <div class="text-center text-lg-start mt-4 pt-2">
                              <button type="submit" class="btn signloginbtn btn-lg">Login</button>
                              <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/signup" class="link-danger">Sign Up </a></p>
                            </div>
                          </form>
                          
                    </div>
                </div>
