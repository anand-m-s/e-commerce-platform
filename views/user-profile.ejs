<%-include("./partials/header") %>
<%-include("./partials/navigation") %>
<section style="background-color: #eee;">
    <div class="container py-5">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="/home">Home</a></li>              
              <li class="breadcrumb-item active" aria-current="page">UserProfile</li>
            </ol>
          </nav>
        </div>
      </div>
  
      <div class="row">
        <div class="col-lg-3">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
                <div class="" style="width: 25px; margin-left: auto; margin-right: 0;">
                  <a href="/userprofileedit" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" id="edit"><path fill="none" d="M0 0h24v24H0V0z"></path><path d="M3 17.46v3.04c0 .28.22.5.5.5h3.04c.13 0 .26-.05.35-.15L17.81 9.94l-3.75-3.75L3.15 17.1c-.1.1-.15.22-.15.36zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"></path></svg>
                  </a>
                </div>

              <h5 class="my-3"><%=users.username %></h5>
              <p class="text-muted mb-1"><%= users.email %></p>
              <p class="text-muted mb-4"><%= users.phone %></p>
              <div class="d-flex justify-content-center mb-2">
               <a href="/orderlist">

                 <button type="button" class="btn btn-outline-success">Orders</button>
               </a> 
               <a href="/wishlist">

                 <button type="button" class="btn btn-outline-primary ms-1">Wishlist</button>
               </a>
              </div>
            </div>
          </div>
          <div class="card mb-4 mb-lg-0">
            <div class="card-body p-0">
              <ul class="list-group list-group-flush rounded-3">
          
                <li class="list-group-item d-flex justify-content-center  p-3">
             
                  <a style="text-decoration: none;" href="/wallet">

                    <p class="mb-0" >Wallet</p>
                  </a>
                </li>
                <li class="list-group-item d-flex justify-content-center  p-3">
             
             

                  <% if (users.referralCode) { %>
                    <p class="mb-0">Referral Code: <br><%= users.referralCode %></p>
                <% } %>
                
                 
                 
                </li>
                <li class="list-group-item d-flex justify-content-center  p-3">
             
                  <a style="text-decoration: none;" href="/logout">

                    <p class="mb-0" >Logout</p>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= users.username %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= users.email %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= users.phone %></p>
                </div>
              </div>
              
           
         
            </div>
          </div>

          <div class="add-address-btn">
            
          <button type="button" class="btn addaddressbtn"  data-bs-toggle="modal" data-bs-target="#useraddress">Add Address</button>
          </div>
          <% if (address && address.length > 0) { %>
            <% for (let i = 0; i < address.length; i += 2) { %>
                <div class="row mb-3">
                    <% for (let j = i; j < i + 2 && j < address.length; j++) { %>
                        <div class="col-md-4 userprofile-main">
                            <div class="p-3 userprofile-title position-relative  ">
                               
                                <div class="card-header  ">
                                    <h5 class="text-center">Address <%= j + 1 %></h5>
                                </div>
                                <div class="d-flex userprofile-card shadow-lg rounded">
                                    <div>
                                        <p class="item-1"> <%= address[j].fullName %></p>      
                                        <p class="item-2"> <%= address[j].addressline %></p>
                                        <p class="item-3"><%= address[j].city %></p>
                                        <p class="item-4"><%= address[j].state %></p>
                                        <p class="item-5"><%= address[j].pincode %></p>
                                        <p class="item-6"><%= address[j].country %></p>
                                        <p class="item-7"><%= address[j].phone %></p>
                                    </div>
                                    <div class="" style="width: 25px; margin-left: auto; margin-right: 0;">
                                      <a   href="/userAddressEdit?id=<%= address[j]._id %>" >
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" id="edit"><path fill="none" d="M0 0h24v24H0V0z"></path><path d="M3 17.46v3.04c0 .28.22.5.5.5h3.04c.13 0 .26-.05.35-.15L17.81 9.94l-3.75-3.75L3.15 17.1c-.1.1-.15.22-.15.36zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"></path></svg>
                                      </a>
                                      <a href="#" class="delete-link" data-address-id="<%= address[j]._id %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" id="delete">
                                          <path d="M24.2,12.193,23.8,24.3a3.988,3.988,0,0,1-4,3.857H12.2a3.988,3.988,0,0,1-4-3.853L7.8,12.193a1,1,0,0,1,2-.066l.4,12.11a2,2,0,0,0,2,1.923h7.6a2,2,0,0,0,2-1.927l.4-12.106a1,1,0,0,1,2,.066Zm1.323-4.029a1,1,0,0,1-1,1H7.478a1,1,0,0,1,0-2h3.1a1.276,1.276,0,0,0,1.273-1.148,2.991,2.991,0,0,1,2.984-2.694h2.33a2.991,2.991,0,0,1,2.984,2.694,1.276,1.276,0,0,0,1.273,1.148h3.1A1,1,0,0,1,25.522,8.164Zm-11.936-1h4.828a3.3,3.3,0,0,1-.255-.944,1,1,0,0,0-.994-.9h-2.33a1,1,0,0,0-.994.9A3.3,3.3,0,0,1,13.586,7.164Zm1.007,15.151V13.8a1,1,0,0,0-2,0v8.519a1,1,0,0,0,2,0Zm4.814,0V13.8a1,1,0,0,0-2,0v8.519a1,1,0,0,0,2,0Z"></path>
                                        </svg>
                                      </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <p class="text-muted">No addresses added yet.</p>
            <!-- Button to trigger the modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#useraddress">Add Address</button>

        <% } %>
      </div>      
    </div>
  </section>

  <div class="modal fade" id="useraddress" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center; background-color: black; color: aliceblue;">
                <h1 class="modal-title fs-5 " id="exampleModalLabel">Add Address</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/addaddress" method="POST">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="fullName" name="fullName" placeholder="" required>
                        <label for="fullName">Full Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="addressline1" name="addressline" placeholder="" required>
                        <label for="addressline">Address Line</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="city" name="city" placeholder="Enter City" required>
                        <label for="city">City</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="state" name="state" placeholder="Enter State" required>
                        <label for="state">State</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="pincode" name="pincode" placeholder="Enter Pincode" required>
                        <label for="pincode">Pincode</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="country" name="country" placeholder="Enter Country" required>
                        <label for="country">Country</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter Phone Number" required>
                        <label for="phone">Phone</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="altPhone" name="altPhone" placeholder="Enter Alternative Phone Number">
                        <label for="altPhone">Alternative Phone</label>
                    </div>

                    <button class="btn btn-success" type="submit">Add Address</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/addressValidation.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>

  $('.delete-link').on('click', function (event) {
    event.preventDefault();
    const addressId = $(this).data('address-id');
    console.log('Deleting address with ID:', addressId);
  
    const $addressContainer = $(this).closest('.userprofile-main');
  
    $.ajax({
      type: 'GET',
      url: '/userAddressDelete?id=' + addressId,
      success: function (response) {
        console.log('Delete request successful. Response:', response);
  
        // Attempt to update the UI immediately
        $addressContainer.remove();
      },
      error: function (error) {
        console.error('Error in delete request:', error);
      }
    });
  });
</script>



  

  <%-include("./partials/footer")  %> 
  <%-include("./partials/end") %>