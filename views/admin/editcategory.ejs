<%-include("../partials/admin-header") %>
<section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="card">
            <div class="card-header text-center">
              <h3>Edit Category</h3>
            </div>
            <div class="card-body">
              <form action="/admin/updatecategory?id=<%= category._id %>" method="POST">
                <div class="form-group">
                  <label for="categoryName">Category Name</label>
                  <input type="text" class="form-control" id="categoryName" name="categoryName" value="<%= category.categoryName %>" required>
                </div>
                <div class="form-group">
                  <label for="categoryDescription">Category Description</label>
                  <textarea class="form-control" id="categoryDescription" name="categoryDescription" rows="4"><%= category.categoryDescription %></textarea>
                </div>
                <div class="form-group">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="isListed" name="isListed" <%= category.isListed ? 'checked' : '' %>
                    <label class="form-check-label" for="isListed">Is Listed</label>
                  </div>
                </div>
                <button class="btn btn-outline-primary btn-block mt-3" type="submit">Save Changes</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  

  <%-include("../partials/end") %>