<%-include("../partials/admin-header") %>
<div class="container mt-4">
    <h3>User Management</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <% if (user.Isblocked) { %>
                            <span class="badge bg-danger">Blocked</span>
                        <% } else { %>
                            <span class="badge bg-success">Active</span>
                        <% } %>
                    </td>
                    <td>
                        <a href="/admin/edituser/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
                        <% if (user.Isblocked) { %>
                            <a href="/admin/unblockuser/<%= user._id %>" class="btn btn-success btn-sm">Unblock</a>
                        <% } else { %>
                            <a href="/admin/blockuser/<%= user._id %>" class="btn btn-danger btn-sm">Block</a>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%-include("../partials/end") %>

