
<%-include("./partials/header")  %>

<%-include("./partials/navigation")  %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2" style="border-right: 0.3px solid rgb(218, 218, 218);">
     
      <div class=" m-1" style="display: flex; justify-content: center; align-items: center;">           
          <div>
            <h4>Filter</h4>
            <h4 class="">Categories</h4>  
            <hr>  
            <a class="categoryfilter" href="/home?id=all" id="allProductsLink" data-category-id="all">
              All Products
            </a>                   
            <% categories.forEach(category => { %>
              <div class="d-flex align-items-center">

                <a class="categoryfilter" href="/home?id=<%= category._id %>">
                  <%= category.categoryName %>
                </a>
              </div>              
            <% }); %>
          </div>
        </div>
        <hr>

        <div class="m-1" >
 

          <div class="custom-wrapper"> 
  
            <div class="header"> 
                <h4 class="projtitle"> 
                   Price
                  </h4> 
            </div> 
  
            <div class="price-input-container"> 
                <div class="price-input"> 
                    <div class="price-field"> 
                        <span>Min</span> 
                        <input type="number" 
                               class="min-input" 
                               value="2500"> 
                    </div> 
                    <div class="price-field"> 
                        <span>Max</span> 
                        <input type="number" 
                               class="max-input" 
                               value="8500"> 
                    </div> 
                </div> 
                <div class="slider-container"> 
                    <div class="price-slider"> 
                    </div> 
                </div> 
            </div> 
  
            <!-- Slider -->
            <div class="range-input"> 
                <input type="range" 
                       class="min-range" 
                       min="0" 
                       max="10000" 
                       value="2500" 
                       step="1"> 
                <input type="range" 
                       class="max-range" 
                       min="0" 
                       max="10000" 
                       value="8500" 
                       step="1"> 
            </div> 
        </div> 
        </div>
    </div>
    <div class="col-md-10">
      <div class="carousel_style">
  
        <div id="carouselExampleAutoplaying" class="carousel slide " data-bs-ride="carousel">
          <div class="carousel-inner ">
            <div class="carousel-item active">
              <img src="/images/d5a2a6481656bb58 (1).webp" class="d-block w-100 carousel_style" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/images/89a97ae7c718bee4.webp" class="d-block w-100 carousel_style" alt="...">
            </div>
        
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div> 
      </div>

      <section class="">
        <div class="container col-md-11 ">
          <div class="row index-row " id="productRow">
            <% products.forEach(product => { %>
              <div class="col-md-6 col-lg-4 col-xl-4 card-main p-3 " id="Product__container">
                <div class="card card-div-product rounded-4 shadow-lg">              
                  <div class="imgdiv mt-2">
                    <a href="/products?productId=<%= product._id %>">
                      <img  src="/images/uploads/<%= product.ProductImage[0].filename %>" class="card-img-top" alt="<%= product.Name %>" />
                    </a>
                  </div>
                  <div class="card-body">
                    <div class="text-center">
                      <h3 class="card-title capitalize" style="margin-bottom: 15px;"><%= product.Name %></h3>
                      
                    </div>
                    <div>
                      <div class="d-flex justify-content-around">
                        <h5><%= product.Brand %></h5>
                        <h6>â‚¹<%= product.Price %></h6>
                      </div>
                    </div>
                    <div class="mt-1" style="display: flex; justify-content: space-evenly; align-items: center;">
                      <% if (product.Stock === 0) { %>
                        <p class="text-danger">Out of Stock</p>
                        <% } else { %>
                          
                          <button class="btn addtocart" onclick="addToCart('<%= product._id %>')">
                            <svg xmlns="http://www.w3.org/2000/svg" height="16" width="18" viewBox="0 0 576 512">                           
                                <path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"/>
                            </svg>
                            Add to cart
                        </button>

                            <button class="wishlist-button" style="border: 0; background: transparent;" onclick="addToWishlist('<%= product._id %>')">                    
                              <svg xmlns="http://www.w3.org/2000/svg" height="18" width="18" viewBox="0 0 512 512"  fill="<%= wishlistProductIds.includes(product._id.toString()) ? 'red' : 'black' %>" ><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M47.6 300.4L228.3 469.1c7.5 7 17.4 10.9 27.7 10.9s20.2-3.9 27.7-10.9L464.4 300.4c30.4-28.3 47.6-68 47.6-109.5v-5.8c0-69.9-50.5-129.5-119.4-141C347 36.5 300.6 51.4 268 84L256 96 244 84c-32.6-32.6-79-47.5-124.6-39.9C50.5 55.6 0 115.2 0 185.1v5.8c0 41.5 17.2 81.2 47.6 109.5z"/></svg>                  
                            </button>                              
                        <% } %>
                      </div>
                      <div class="d-flex justify-content-center"  id="message-container-<%= product._id %>">
                        <p></p>
                      </div>
                    </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </section>

    </div>
  </div>
</div>
  


<%-include("./partials/footer")  %> 

