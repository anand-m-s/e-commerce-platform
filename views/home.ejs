<script>
  // addToCart
  function addToCart(productId){
    const message = document.querySelector(`#message-container-${productId}`);
    fetch(`/addproductstocart?productId=${productId}`,{
      method:'POST',
      headers: {
        'Content-Type':'application/json',        
      },
    }).then(response=>{
      if(response.status===200){
        message.innerHTML = "Product added successfully";
        message.style.color="green";
        setTimeout(() => {
          message.innerHTML="";
        }, 1000);
      }else if(response.status===208){  
        message.innerHTML="Product already in cart";
        message.style.color="red";
        setTimeout(() => {
          message.innerHTML="";
        }, 1000);
      }
    
    }).catch(error=>{
      console.error("error adding products to cart:",error)
    });
  }
//  search results
  document.addEventListener('DOMContentLoaded', function() {
      const searchButton = document.getElementById('searchButton');
      const searchInput = document.getElementById('searchInput');
      function performSearch() {
        var searchTerm = searchInput.value.trim();
        if (searchTerm !== '') {       
          window.location.href = '/search?query=' + searchTerm;
        }
      }
        
        searchButton.addEventListener('click', performSearch);
  searchInput.addEventListener('keypress', function(event) {
    if (event.keyCode === 13) {
      performSearch();
    }
  });
  
    });

// wishlist
const addToWishlist = async (productId) => {
  try {
    const response = await fetch('/add-to-wishlist', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ productId }),
    });

    const data = await response.json();
    // const wishlistIcon = document.getElementById(`wishlist-icon-${productId}`);
    if (response.ok) {             
        window.location.reload()     
    } else {      
      console.error('Error adding product to wishlist:', data.error);     
    }
  } catch (error) {
    console.error('Error adding product to wishlist:', error);
  }
};

// filter 
document.getElementById('allProductsLink').addEventListener('click', function () {
  const currentUrl = window.location.href.split('?')[0];
  window.location.href=currentUrl
});



function selectCategory(element) {      
    let categoryElements = document.querySelectorAll('.categoryfilter');
    categoryElements.forEach(function (el) {
      el.classList.remove('categoryActive');
    });      
    element.classList.add('categoryActive');
  }
document.addEventListener("DOMContentLoaded", function () {
    document.getElementById("filterBtn").addEventListener("click", function () {
      
      let selectedRam = [];
      let selectedStorage = [];
      let selectedCategory = document.querySelector('.categoryActive');
   
      selectedRam = getSelectedValues("Ram");
      selectedStorage = getSelectedValues("storage");
      let minPrice = document.querySelector(".min-input").value;
      let maxPrice = document.querySelector(".max-input").value;
      let queryParams = ""; 

      if (selectedCategory && selectedCategory.textContent !== null) {
  queryParams += "categoryName=" + encodeURIComponent(selectedCategory.textContent.trim());
}

      
      if (parseFloat(minPrice) > 0) {
        queryParams += "&minPrice=" + minPrice;
      }

      if (parseFloat(maxPrice) > 0) {
        queryParams += "&maxPrice=" + maxPrice;
      }
      if (selectedRam.length > 0) {
      queryParams += "&ram=" + selectedRam.join(",");
    }

    if (selectedStorage.length > 0) {
      queryParams += "&storage=" + selectedStorage.join(",");
    }
      
      let filterUrl = "/home?" + queryParams;
      document.querySelector("#filterBtn").setAttribute("href", filterUrl);
      
      window.location.href = filterUrl;
    });

    function getSelectedValues(groupClassName) {
        let selectedValues = [];
        let checkboxes = document.querySelectorAll("." + groupClassName + " input:checked");
        checkboxes.forEach(function (checkbox) {
          selectedValues.push(checkbox.nextElementSibling.textContent);
        });
        return selectedValues;
      }
  });

</script>
